@page
@model EbikeRental.Web.Pages.Masters.Items.InfoModel
@{
	ViewData["Title"] = Model.Item.Id == 0 ? "New Item" : "Edit Item";
	ViewData["FormTitle"] = ViewData["Title"];
	ViewData["FormIcon"] = "bi-box-seam";
}

<partial name="_FormCardLayout" />

<form method="post" id="info-form">
	<div asp-validation-summary="ModelOnly" class="text-red-600 mb-4 text-sm"></div>
	<input type="hidden" asp-for="Item.Id" />

	<!-- Basic Information Section -->
	<div class="mb-6">
		<h3 class="text-base font-semibold text-gray-800 mb-4 pb-2 border-b border-gray-200">
			<i class="bi bi-info-circle mr-2"></i>Basic Information
		</h3>
		
		<div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
			<div>
				<label asp-for="Item.Code" class="block text-sm font-medium text-gray-700 mb-2">
					Item Code <span class="text-red-600">*</span>
				</label>
				<input asp-for="Item.Code" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="e.g., ITEM-001" />
				<span asp-validation-for="Item.Code" class="text-red-600 text-sm mt-1 block"></span>
			</div>
			<div>
				<label asp-for="Item.Name" class="block text-sm font-medium text-gray-700 mb-2">
					Item Name <span class="text-red-600">*</span>
				</label>
				<input asp-for="Item.Name" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="e.g., Electric Motor 250W" />
				<span asp-validation-for="Item.Name" class="text-red-600 text-sm mt-1 block"></span>
			</div>
		</div>

		<div class="mb-4">
			<label asp-for="Item.Description" class="block text-sm font-medium text-gray-700 mb-2">Description</label>
			<textarea asp-for="Item.Description" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" rows="3" placeholder="Detailed description of the item..."></textarea>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
			<div>
				<label asp-for="Item.Category" class="block text-sm font-medium text-gray-700 mb-2">
					<i class="bi bi-tag mr-1"></i>Category
				</label>
				<input asp-for="Item.Category" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="e.g., Components" />
			</div>
			<div>
				<label asp-for="Item.UnitOfMeasure" class="block text-sm font-medium text-gray-700 mb-2">
					<i class="bi bi-rulers mr-1"></i>Unit of Measure
				</label>
				<input asp-for="Item.UnitOfMeasure" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="e.g., EA, KG, M" />
			</div>
			<div>
				<label asp-for="Item.StandardCost" class="block text-sm font-medium text-gray-700 mb-2">
					<i class="bi bi-currency-dollar mr-1"></i>Standard Cost
				</label>
				<input asp-for="Item.StandardCost" type="number" step="0.01" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="0.00" />
			</div>
		</div>
	</div>

	<!-- Identification & Tracking Section -->
	<div class="mb-6">
		<h3 class="text-base font-semibold text-gray-800 mb-4 pb-2 border-b border-gray-200">
			<i class="bi bi-upc-scan mr-2"></i>Identification & Tracking
		</h3>
		
		<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
			<div>
				<label asp-for="Item.Barcode" class="block text-sm font-medium text-gray-700 mb-2">
					<i class="bi bi-upc mr-1"></i>Barcode
				</label>
				<input asp-for="Item.Barcode" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Optional barcode number" />
				<span class="text-xs text-gray-500 mt-1 block">Enter barcode for scanning</span>
			</div>
			
			<div>
				<label class="block text-sm font-medium text-gray-700 mb-3">
					<i class="bi bi-clipboard-check mr-1"></i>Tracking Options
				</label>
				<div class="space-y-3">
					<div class="flex items-start">
						<div class="flex items-center h-5">
							<input asp-for="Item.IsSerial" type="checkbox" class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
						</div>
						<div class="ml-3">
							<label asp-for="Item.IsSerial" class="text-sm font-medium text-gray-700">Serial Number Tracking</label>
							<p class="text-xs text-gray-500">Track each item individually by serial number</p>
						</div>
					</div>
					<div class="flex items-start">
						<div class="flex items-center h-5">
							<input asp-for="Item.IsBatch" type="checkbox" class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
						</div>
						<div class="ml-3">
							<label asp-for="Item.IsBatch" class="text-sm font-medium text-gray-700">Batch Number Tracking</label>
							<p class="text-xs text-gray-500">Track items by production batch</p>
						</div>
					</div>
					<div class="flex items-start">
						<div class="flex items-center h-5">
							<input asp-for="Item.IsExpiry" type="checkbox" class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
						</div>
						<div class="ml-3">
							<label asp-for="Item.IsExpiry" class="text-sm font-medium text-gray-700">Expiry Date Tracking</label>
							<p class="text-xs text-gray-500">Track expiration dates for perishable items</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Status Section -->
	<div class="mb-4">
		<h3 class="text-base font-semibold text-gray-800 mb-4 pb-2 border-b border-gray-200">
			<i class="bi bi-toggle-on mr-2"></i>Status
		</h3>
		
		<div class="flex items-center p-4 bg-gray-50 rounded-lg border border-gray-200">
			<div class="flex items-center h-5">
				<input asp-for="Item.IsActive" type="checkbox" class="w-5 h-5 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
			</div>
			<div class="ml-3">
				<label asp-for="Item.IsActive" class="text-sm font-medium text-gray-700">Active Item</label>
				<p class="text-xs text-gray-500">Inactive items will not appear in selection lists</p>
			</div>
		</div>
	</div>
</form>

<partial name="_FormCardLayoutEnd" />

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
