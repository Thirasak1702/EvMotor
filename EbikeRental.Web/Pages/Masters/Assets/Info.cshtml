@page "{id:int?}"
@model EbikeRental.Web.Pages.Masters.Assets.InfoModel
@{
    ViewData["Title"] = Model.Id.HasValue ? "Edit Asset" : "New Asset";
    ViewData["FormTitle"] = ViewData["Title"];
    ViewData["FormIcon"] = "bi-grid-3x3-gap";
}

<partial name="_FormCardLayout" />

<form method="post" id="info-form">
    <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4 text-sm"></div>
    <input type="hidden" asp-for="Asset.Id" />
    
    <!-- Asset Information Section -->
    <div class="mb-6">
        <h3 class="text-base font-semibold text-gray-800 mb-4 pb-2 border-b border-gray-200">
            <i class="bi bi-info-circle mr-2"></i>Asset Information
        </h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
            <div>
                <label asp-for="Asset.AssetCode" class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="bi bi-upc-scan mr-1"></i>Asset Code <span class="text-red-600">*</span>
                </label>
                <input asp-for="Asset.AssetCode" 
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" 
                       placeholder="e.g., ASSET-001" />
                <span asp-validation-for="Asset.AssetCode" class="text-red-600 text-sm mt-1 block"></span>
            </div>
            
            <div>
                <label asp-for="Asset.SerialNumber" class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="bi bi-tag mr-1"></i>Serial Number <span class="text-red-600">*</span>
                </label>
                <input asp-for="Asset.SerialNumber" 
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" 
                       placeholder="e.g., SN123456789" />
                <span asp-validation-for="Asset.SerialNumber" class="text-red-600 text-sm mt-1 block"></span>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label asp-for="Asset.ItemId" class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="bi bi-box-seam mr-1"></i>Item <span class="text-red-600">*</span>
                </label>
                <select asp-for="Asset.ItemId" 
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-white focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="">-- Select Item --</option>
                    <option value="1">E-Bike Model X</option>
                </select>
                <span asp-validation-for="Asset.ItemId" class="text-red-600 text-sm mt-1 block"></span>
            </div>
            
            <div>
                <label asp-for="Asset.Status" class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="bi bi-clipboard-check mr-1"></i>Status <span class="text-red-600">*</span>
                </label>
                <select asp-for="Asset.Status" 
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-white focus:outline-none focus:ring-2 focus:ring-blue-500" 
                        asp-items="Html.GetEnumSelectList<EbikeRental.Domain.Enums.AssetStatus>()">
                </select>
                <span asp-validation-for="Asset.Status" class="text-red-600 text-sm mt-1 block"></span>
            </div>
        </div>
    </div>

    <!-- Purchase Details Section -->
    <div class="mb-6">
        <h3 class="text-base font-semibold text-gray-800 mb-4 pb-2 border-b border-gray-200">
            <i class="bi bi-calendar-check mr-2"></i>Purchase Details
        </h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
            <div>
                <label asp-for="Asset.PurchaseDate" class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="bi bi-calendar-event mr-1"></i>Purchase Date
                </label>
                <input asp-for="Asset.PurchaseDate" 
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" 
                       type="date" />
                <span asp-validation-for="Asset.PurchaseDate" class="text-red-600 text-sm mt-1 block"></span>
            </div>
            
            <div>
                <label asp-for="Asset.PurchaseCost" class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="bi bi-currency-dollar mr-1"></i>Purchase Cost
                </label>
                <input asp-for="Asset.PurchaseCost" 
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" 
                       type="number" 
                       step="0.01" 
                       placeholder="0.00" />
                <span asp-validation-for="Asset.PurchaseCost" class="text-red-600 text-sm mt-1 block"></span>
            </div>
        </div>

        <div>
            <label asp-for="Asset.Notes" class="block text-sm font-medium text-gray-700 mb-2">
                <i class="bi bi-sticky mr-1"></i>Notes
            </label>
            <textarea asp-for="Asset.Notes" 
                      class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" 
                      rows="3" 
                      placeholder="Additional notes about this asset..."></textarea>
            <span asp-validation-for="Asset.Notes" class="text-red-600 text-sm mt-1 block"></span>
        </div>
    </div>

    <!-- Status Section -->
    <div class="mb-4">
        <h3 class="text-base font-semibold text-gray-800 mb-4 pb-2 border-b border-gray-200">
            <i class="bi bi-toggle-on mr-2"></i>Status
        </h3>
        
        <div class="flex items-center p-4 bg-gray-50 rounded-lg border border-gray-200">
            <div class="flex items-center h-5">
                <input asp-for="Asset.IsActive" 
                       class="w-5 h-5 text-blue-600 border-gray-300 rounded focus:ring-blue-500" 
                       type="checkbox" />
            </div>
            <div class="ml-3">
                <label asp-for="Asset.IsActive" class="text-sm font-medium text-gray-700">Active Asset</label>
                <p class="text-xs text-gray-500">Inactive assets will not appear in selection lists</p>
            </div>
        </div>
    </div>
</form>

<partial name="_FormCardLayoutEnd" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
