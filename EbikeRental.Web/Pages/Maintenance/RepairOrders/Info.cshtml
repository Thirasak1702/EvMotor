@page
@model EbikeRental.Web.Pages.Maintenance.RepairOrders.InfoModel
@{
    ViewData["Title"] = Model.RepairOrder.Id == 0 ? "New Repair Order" : "Repair Order Details";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="bi bi-tools me-2"></i>@ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="RepairOrder.Id" />

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="RepairOrder.AssetId" class="form-label">Asset</label>
                            <select asp-for="RepairOrder.AssetId" asp-items="Model.AssetList" class="form-select">
                                <option value="">-- Select Asset --</option>
                            </select>
                            <span asp-validation-for="RepairOrder.AssetId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="RepairOrder.Status" class="form-label">Status</label>
                            <select asp-for="RepairOrder.Status" asp-items="Model.StatusList" class="form-select">
                            </select>
                            <span asp-validation-for="RepairOrder.Status" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="RepairOrder.Description" class="form-label">Description</label>
                        <textarea asp-for="RepairOrder.Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="RepairOrder.Description" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label asp-for="RepairOrder.RequestedDate" class="form-label">Requested Date</label>
                            <input asp-for="RepairOrder.RequestedDate" class="form-control" type="date" />
                            <span asp-validation-for="RepairOrder.RequestedDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="RepairOrder.EstimatedCost" class="form-label">Estimated Cost</label>
                            <input asp-for="RepairOrder.EstimatedCost" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="RepairOrder.EstimatedCost" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="RepairOrder.ActualCost" class="form-label">Actual Cost</label>
                            <input asp-for="RepairOrder.ActualCost" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="RepairOrder.ActualCost" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="RepairOrder.RepairNotes" class="form-label">Repair Notes</label>
                        <textarea asp-for="RepairOrder.RepairNotes" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="RepairOrder.RepairNotes" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
