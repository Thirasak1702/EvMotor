@page
@model EbikeRental.Web.Pages.Dashboard.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<!-- Header Section -->
<div class="mb-8">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-4xl font-bold text-gray-800 flex items-center gap-3">
                <i class="bi bi-speedometer2 text-blue-600"></i>
                Dashboard
            </h1>
            <p class="text-lg text-gray-600 mt-2">Welcome to ERP Management System</p>
            <p class="text-sm text-gray-500 mt-1">
                <i class="bi bi-calendar3 mr-1"></i>
                @DateTime.Now.ToString("dddd, dd MMMM yyyy")
            </p>
        </div>
        <div class="text-right">
            <p class="text-sm text-gray-500">Current User</p>
            <p class="text-lg font-semibold text-gray-800">@User.Identity?.Name</p>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 mt-1">
                <i class="bi bi-circle-fill text-green-500 text-xs mr-1"></i>
                Online
            </span>
        </div>
    </div>
</div>

<!-- KPI Cards - Row 1: Rental & Assets -->
<div class="mb-6">
    <h2 class="text-lg font-semibold text-gray-800 mb-4 flex items-center gap-2">
        <i class="bi bi-bicycle text-blue-600"></i>
        Rental & Asset Management
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <a href="/Masters/Assets" class="bg-gradient-to-br from-blue-500 to-blue-600 text-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-all transform hover:scale-105">
            <div class="flex items-center justify-between mb-4">
                <div class="text-sm font-medium opacity-90">Available Assets</div>
                <i class="bi bi-bicycle text-3xl opacity-80"></i>
            </div>
            <div class="text-4xl font-bold mb-1">@Model.AvailableAssetsCount</div>
            <p class="text-sm opacity-80">Bikes ready for rent</p>
        </a>
        
        <a href="/Rental/Contracts" class="bg-gradient-to-br from-green-500 to-green-600 text-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-all transform hover:scale-105">
            <div class="flex items-center justify-between mb-4">
                <div class="text-sm font-medium opacity-90">Active Rentals</div>
                <i class="bi bi-file-earmark-check text-3xl opacity-80"></i>
            </div>
            <div class="text-4xl font-bold mb-1">@Model.ActiveRentalsCount</div>
            <p class="text-sm opacity-80">Currently rented out</p>
        </a>
        
        <a href="/Maintenance/RepairOrders" class="bg-gradient-to-br from-yellow-500 to-yellow-600 text-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-all transform hover:scale-105">
            <div class="flex items-center justify-between mb-4">
                <div class="text-sm font-medium opacity-90">Pending Repairs</div>
                <i class="bi bi-tools text-3xl opacity-80"></i>
            </div>
            <div class="text-4xl font-bold mb-1">@Model.PendingRepairsCount</div>
            <p class="text-sm opacity-80">Waiting for maintenance</p>
        </a>
        
        <a href="/Masters/Users" class="bg-gradient-to-br from-cyan-500 to-cyan-600 text-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-all transform hover:scale-105">
            <div class="flex items-center justify-between mb-4">
                <div class="text-sm font-medium opacity-90">System Users</div>
                <i class="bi bi-people text-3xl opacity-80"></i>
            </div>
            <div class="text-4xl font-bold mb-1">@Model.TotalUsersCount</div>
            <p class="text-sm opacity-80">Registered users</p>
        </a>
    </div>
</div>

<!-- KPI Cards - Row 2: Production -->
<div class="mb-6">
    <h2 class="text-lg font-semibold text-gray-800 mb-4 flex items-center gap-2">
        <i class="bi bi-gear-fill text-purple-600"></i>
        Production Management
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
