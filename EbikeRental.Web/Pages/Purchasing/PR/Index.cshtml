@page
@model EbikeRental.Web.Pages.Purchasing.PR.IndexModel
@{
    ViewData["Title"] = "Purchase Requisitions";
}

<div class="flex justify-between items-center mb-6">
    <h2 class="text-2xl font-bold text-gray-800">
        <i class="bi bi-file-text mr-2"></i>Purchase Requisitions
    </h2>
    <a asp-page="Info" class="bg-blue-600 hover:bg-blue-700 text-white font-medium px-4 py-2 rounded-lg transition inline-flex items-center">
        <i class="bi bi-plus-lg mr-2"></i> New PR
    </a>
</div>

<!-- Filter Section -->
<div class="bg-white rounded-lg shadow-sm mb-4">
    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200 rounded-t-lg">
        <h5 class="text-lg font-semibold text-gray-800 mb-0">
            <i class="bi bi-funnel mr-2"></i>Filters
        </h5>
    </div>
    <div class="p-6">
        <form method="get">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">PR Number</label>
                    <input type="text"
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                           name="documentNumber" value="@Model.DocumentNumber" placeholder="Search..." />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">From Date</label>
                    <input type="date"
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                           name="fromDate" value="@Model.FromDate?.ToString("yyyy-MM-dd")" />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">To Date</label>
                    <input type="date"
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                           name="toDate" value="@Model.ToDate?.ToString("yyyy-MM-dd")" />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Department</label>
                    <input type="text"
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                           name="department" value="@Model.Department" placeholder="Search..." />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                    <select class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                            name="status">
                        <option value="">All</option>
                        <option value="Draft" selected="@(Model.Status == "Draft")">Draft</option>
                        <option value="Pending" selected="@(Model.Status == "Pending")">Pending</option>
                        <option value="Approved" selected="@(Model.Status == "Approved")">Approved</option>
                        <option value="Rejected" selected="@(Model.Status == "Rejected")">Rejected</option>
                    </select>
                </div>
            </div>

            <div class="flex items-center justify-between mt-4">
                <div class="flex gap-2">
                    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-medium px-4 py-2 rounded-lg transition inline-flex items-center">
                        <i class="bi bi-search mr-2"></i> Search
                    </button>
                    <a asp-page="Index" class="bg-gray-500 hover:bg-gray-600 text-white font-medium px-4 py-2 rounded-lg transition inline-flex items-center">
                        <i class="bi bi-x-circle mr-2"></i> Clear
                    </a>
                </div>
                
                <!-- Page Size Selector -->
                <div class="flex items-center gap-2">
                    <label class="text-sm font-medium text-gray-700">Page size:</label>
                    <select name="pageSize" onchange="this.form.submit()" class="px-3 py-2 border border-gray-300 rounded-lg bg-white focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="10" selected="@(Model.PageSize == 10)">10</option>
                        <option value="25" selected="@(Model.PageSize == 25)">25</option>
                        <option value="50" selected="@(Model.PageSize == 50)">50</option>
                        <option value="100" selected="@(Model.PageSize == 100)">100</option>
                    </select>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="bg-white rounded-lg shadow-sm">
    <div class="p-6">
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50 border-b border-gray-200">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">PR Number</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Department</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Requestor</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    @if (Model.PurchaseRequisitions.Any())
                    {
                        @foreach (var pr in Model.PurchaseRequisitions)
                        {
                            <tr class="hover:bg-gray-50 transition">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <strong class="text-gray-900">@pr.DocumentNumber</strong>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-gray-700">@pr.Date.ToString("dd/MM/yyyy")</td>
                                <td class="px-6 py-4 whitespace-nowrap text-gray-700">@pr.DepartmentName</td>
                                <td class="px-6 py-4 whitespace-nowrap text-gray-700">@pr.RequestorName</td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @{
                                        var status = pr.Status ?? "";
                                        var badgeClass = status switch
                                        {
                                            "Draft" => "bg-gray-100 text-gray-800",
                                            "Pending" => "bg-yellow-100 text-yellow-800",
                                            "Approved" => "bg-green-100 text-green-800",
                                            "Rejected" => "bg-red-100 text-red-800",
                                            _ => "bg-cyan-100 text-cyan-800"
                                        };
                                    }
                                    <span class="px-2 py-1 text-xs font-medium rounded-full @badgeClass">@status</span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex gap-3">
                                        <a asp-page="Info" asp-route-id="@pr.Id"
                                           class="text-blue-600 hover:text-blue-800 font-medium inline-flex items-center">
                                            <i class="bi bi-pencil mr-1"></i> Edit
                                        </a>
                                        <a asp-page="View" asp-route-id="@pr.Id"
                                           class="text-cyan-600 hover:text-cyan-800 font-medium inline-flex items-center">
                                            <i class="bi bi-eye mr-1"></i> View
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="px-6 py-10 text-center text-gray-500">
                                <i class="bi bi-inbox text-3xl"></i>
                                <div class="mt-2">No purchase requisitions found</div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <div class="flex items-center justify-between px-6 py-4 border-t border-gray-200">
                <div class="text-sm text-gray-700">
                    Showing <strong>@((Model.PageNumber - 1) * Model.PageSize + 1)</strong> to 
                    <strong>@Math.Min(Model.PageNumber * Model.PageSize, Model.TotalItems)</strong> of 
                    <strong>@Model.TotalItems</strong> items
                </div>

                <nav class="flex items-center gap-2">
                    @if (Model.PageNumber > 1)
                    {
                        <a asp-page="./Index" 
                           asp-route-pageNumber="@(Model.PageNumber - 1)"
                           asp-route-pageSize="@Model.PageSize"
                           asp-route-documentNumber="@Model.DocumentNumber"
                           asp-route-fromDate="@Model.FromDate"
                           asp-route-toDate="@Model.ToDate"
                           asp-route-status="@Model.Status"
                           asp-route-department="@Model.Department"
                           class="px-3 py-2 rounded-lg border border-gray-300 bg-white text-gray-700 hover:bg-gray-50">
                            Previous
                        </a>
                    }

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        if (i == Model.PageNumber)
                        {
                            <span class="px-4 py-2 rounded-lg bg-blue-600 text-white font-medium">@i</span>
                        }
                        else if (i == 1 || i == Model.TotalPages || (i >= Model.PageNumber - 2 && i <= Model.PageNumber + 2))
                        {
                            <a asp-page="./Index" 
                               asp-route-pageNumber="@i"
                               asp-route-pageSize="@Model.PageSize"
                               asp-route-documentNumber="@Model.DocumentNumber"
                               asp-route-fromDate="@Model.FromDate"
                               asp-route-toDate="@Model.ToDate"
                               asp-route-status="@Model.Status"
                               asp-route-department="@Model.Department"
                               class="px-4 py-2 rounded-lg border border-gray-300 bg-white text-gray-700 hover:bg-gray-50">
                                @i
                            </a>
                        }
                        else if (i == Model.PageNumber - 3 || i == Model.PageNumber + 3)
                        {
                            <span class="px-2 text-gray-500">...</span>
                        }
                    }

                    @if (Model.PageNumber < Model.TotalPages)
                    {
                        <a asp-page="./Index" 
                           asp-route-pageNumber="@(Model.PageNumber + 1)"
                           asp-route-pageSize="@Model.PageSize"
                           asp-route-documentNumber="@Model.DocumentNumber"
                           asp-route-fromDate="@Model.FromDate"
                           asp-route-toDate="@Model.ToDate"
                           asp-route-status="@Model.Status"
                           asp-route-department="@Model.Department"
                           class="px-3 py-2 rounded-lg border border-gray-300 bg-white text-gray-700 hover:bg-gray-50">
                            Next
                        </a>
                    }
                </nav>
            </div>
        }
    </div>
</div>
