@page
@model EbikeRental.Web.Pages.Production.ProductionReceipt.IndexModel
@{
    ViewData["Title"] = "Production Receipts";
}

<div class="flex justify-between items-center mb-6">
    <h2 class="text-2xl font-bold text-gray-800">
        <i class="bi bi-box-seam mr-2"></i>Production Receipts
    </h2>
    <a asp-page="./Info" class="bg-blue-600 hover:bg-blue-700 text-white font-medium px-4 py-2 rounded-lg transition inline-flex items-center">
        <i class="bi bi-plus-lg mr-2"></i> New Production Receipt
    </a>
</div>

@* Success/Error Messages *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="mb-4 rounded-lg border border-green-200 bg-green-50 px-4 py-3 text-sm text-green-700">
        <i class="bi bi-check-circle mr-2"></i>@TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="mb-4 rounded-lg border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700">
        <i class="bi bi-exclamation-triangle mr-2"></i>@TempData["ErrorMessage"]
    </div>
}

<!-- Filter Section -->
<div class="bg-white rounded-lg shadow-sm mb-4">
    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200 rounded-t-lg">
        <h5 class="text-lg font-semibold text-gray-800 mb-0">
            <i class="bi bi-funnel mr-2"></i>Filters
        </h5>
    </div>
    <div class="p-6">
        <form method="get">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">PR Number</label>
                    <input type="text"
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                           name="documentNumber" value="@Model.DocumentNumber" placeholder="Search..." />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">From Date</label>
                    <input type="date"
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                           name="fromDate" value="@Model.FromDate?.ToString("yyyy-MM-dd")" />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">To Date</label>
                    <input type="date"
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                           name="toDate" value="@Model.ToDate?.ToString("yyyy-MM-dd")" />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">PO Number</label>
                    <input type="text"
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                           name="productionOrderNumber" value="@Model.ProductionOrderNumber" placeholder="Search..." />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                    <select class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                            name="status">
                        <option value="">All</option>
                        <option value="Draft" selected="@(Model.Status == "Draft")">Draft</option>
                        <option value="Posted" selected="@(Model.Status == "Posted")">Posted</option>
                        <option value="Cancelled" selected="@(Model.Status == "Cancelled")">Cancelled</option>
                    </select>
                </div>
            </div>

            <div class="flex items-center justify-between mt-4">
                <div class="flex gap-2">
                    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-medium px-4 py-2 rounded-lg transition inline-flex items-center">
                        <i class="bi bi-search mr-2"></i> Search
                    </button>
                    <a asp-page="Index" class="bg-gray-500 hover:bg-gray-600 text-white font-medium px-4 py-2 rounded-lg transition inline-flex items-center">
                        <i class="bi bi-x-circle mr-2"></i> Clear
                    </a>
                </div>
                <div class="text-sm text-gray-600">
                    Showing @Model.ProductionReceipts.Count result(s)
                </div>
            </div>
        </form>
    </div>
</div>

<div class="bg-white rounded-lg shadow-sm">
    <div class="p-6">
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50 border-b border-gray-200">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">PR Number</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Receipt Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">PO Number</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Product</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Warehouse</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    @if (Model.ProductionReceipts.Any())
                    {
                        @foreach (var pr in Model.ProductionReceipts)
                        {
                            <tr class="hover:bg-gray-50 transition">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <strong class="text-gray-900">@pr.DocumentNumber</strong>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-gray-700">@pr.ReceiptDate.ToString("dd/MM/yyyy")</td>
                                <td class="px-6 py-4 whitespace-nowrap text-gray-700">
                                    @if (!string.IsNullOrEmpty(pr.ProductionOrderNumber))
                                    {
                                        <span>@pr.ProductionOrderNumber</span>
                                    }
                                    else
                                    {
                                        <span class="text-gray-400">-</span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-gray-700">
                                    @if (pr.Items != null && pr.Items.Any())
                                    {
                                        <span>@pr.Items.First().ItemName</span>
                                        @if (pr.Items.Count > 1)
                                        {
                                            <span class="text-gray-500 text-sm"> (+@(pr.Items.Count - 1) more)</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-gray-400">-</span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-gray-700">@pr.WarehouseName</td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @{
                                        var status = pr.Status ?? "";
                                        var badgeClass = status switch
                                        {
                                            "Draft" => "bg-gray-100 text-gray-800",
                                            "Posted" => "bg-green-100 text-green-800",
                                            "Cancelled" => "bg-red-100 text-red-800",
                                            _ => "bg-cyan-100 text-cyan-800"
                                        };
                                    }
                                    <span class="px-2 py-1 text-xs font-medium rounded-full @badgeClass">@status</span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex gap-2">
                                        @if (pr.Status == "Draft")
                                        {
                                            <a asp-page="./Info" asp-route-id="@pr.Id"
                                               class="text-blue-600 hover:text-blue-800 font-medium inline-flex items-center text-sm">
                                                <i class="bi bi-pencil mr-1"></i> Edit
                                            </a>
                                            
                                            <form method="post" asp-page-handler="Post" asp-route-id="@pr.Id" class="inline"
                                                  onsubmit="return confirm('Are you sure you want to post this Production Receipt? This will add finished goods to inventory.');">
                                                <button type="submit"
                                                        class="text-green-600 hover:text-green-800 font-medium inline-flex items-center text-sm">
                                                    <i class="bi bi-check-circle mr-1"></i> Post
                                                </button>
                                            </form>

                                            <form method="post" asp-page-handler="Delete" asp-route-id="@pr.Id" class="inline"
                                                  onsubmit="return confirm('Are you sure you want to delete this Production Receipt?');">
                                                <button type="submit"
                                                        class="text-red-600 hover:text-red-800 font-medium inline-flex items-center text-sm">
                                                    <i class="bi bi-trash mr-1"></i> Delete
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <a asp-page="./Info" asp-route-id="@pr.Id"
                                               class="text-cyan-600 hover:text-cyan-800 font-medium inline-flex items-center text-sm">
                                                <i class="bi bi-eye mr-1"></i> View
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="px-6 py-10 text-center text-gray-500">
                                <i class="bi bi-inbox text-3xl"></i>
                                <div class="mt-2">No production receipts found</div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
