@page
@model EbikeRental.Web.Pages.Quality.QC.IndexModel
@{
    ViewData["Title"] = "Quality Checks";
}

<div class="py-4">
    <div class="mb-4 flex items-center justify-between">
        <h2 class="text-xl font-semibold text-gray-800">Quality Checks</h2>
        <a asp-page="./Info" class="inline-flex items-center gap-2 rounded-lg bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700">
            <i class="bi bi-plus-circle"></i>
            New QC
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="mb-4 rounded-lg border border-green-200 bg-green-50 px-4 py-3 text-sm text-green-800">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="mb-4 rounded-lg border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700">
            @TempData["ErrorMessage"]
        </div>
    }

    <!-- Filters -->
    <div class="mb-4 rounded-lg border border-gray-200 bg-white">
        <div class="border-b border-gray-200 bg-gray-50 px-4 py-3">
            <div class="flex items-center gap-2 text-sm font-semibold text-gray-700">
                <i class="bi bi-funnel"></i>
                Filters
            </div>
        </div>

        <div class="p-4">
            <form method="get" class="space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Document Number</label>
                        <input type="text" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" name="documentNumber" value="@Model.DocumentNumber" placeholder="Search..." />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">From Date</label>
                        <input type="date" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" name="fromDate" value="@Model.FromDate?.ToString("yyyy-MM-dd")" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">To Date</label>
                        <input type="date" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" name="toDate" value="@Model.ToDate?.ToString("yyyy-MM-dd")" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Check Type</label>
                        <select class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-white focus:outline-none focus:ring-2 focus:ring-blue-500" name="checkType">
                            <option value="">All</option>
                            <option value="InProcess" selected="@(Model.CheckType == "InProcess")">In-Process</option>
                            <option value="Final" selected="@(Model.CheckType == "Final")">Final</option>
                            <option value="Receiving" selected="@(Model.CheckType == "Receiving")">Receiving</option>
                        </select>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                        <select class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-white focus:outline-none focus:ring-2 focus:ring-blue-500" name="status">
                            <option value="">All</option>
                            <option value="Pending" selected="@(Model.Status == "Pending")">Pending</option>
                            <option value="InProgress" selected="@(Model.Status == "InProgress")">In Progress</option>
                            <option value="Passed" selected="@(Model.Status == "Passed")">Passed</option>
                            <option value="Failed" selected="@(Model.Status == "Failed")">Failed</option>
                            <option value="Conditional" selected="@(Model.Status == "Conditional")">Conditional</option>
                        </select>
                    </div>
                </div>

                <div class="flex gap-2">
                    <button type="submit" class="inline-flex items-center gap-2 rounded-lg bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700">
                        <i class="bi bi-search"></i>
                        Search
                    </button>
                    <a asp-page="Index" class="inline-flex items-center gap-2 rounded-lg bg-gray-100 px-4 py-2 text-sm font-medium text-gray-800 hover:bg-gray-200">
                        <i class="bi bi-x-circle"></i>
                        Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="rounded-lg border border-gray-200 bg-white">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200 text-sm">
                <thead class="bg-gray-50">
                    <tr class="text-left text-xs font-semibold uppercase tracking-wider text-gray-600">
                        <th class="px-4 py-3">Document No.</th>
                        <th class="px-4 py-3">Check Type</th>
                        <th class="px-4 py-3">Inspection Date</th>
                        <th class="px-4 py-3">Inspected By</th>
                        <th class="px-4 py-3">Status</th>
                        <th class="px-4 py-3">Reference</th>
                        <th class="px-4 py-3 text-right">Actions</th>
                    </tr>
                </thead>

                <tbody class="divide-y divide-gray-200 bg-white">
                    @if (Model.QualityChecks.Any())
                    {
                        @foreach (var qc in Model.QualityChecks)
                        {
                            <tr class="hover:bg-gray-50">
                                <td class="px-4 py-3 font-medium text-gray-900">@qc.DocumentNumber</td>

                                <td class="px-4 py-3">
                                    <span class="inline-flex items-center rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-800">@qc.CheckTypeName</span>
                                </td>

                                <td class="px-4 py-3 text-gray-700">@qc.InspectionDate.ToString("dd/MM/yyyy")</td>
                                <td class="px-4 py-3 text-gray-700">@qc.InspectedBy</td>

                                <td class="px-4 py-3">
                                    @if (qc.Status == EbikeRental.Domain.Enums.QualityCheckStatus.Passed)
                                    {
                                        <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">Passed</span>
                                    }
                                    else if (qc.Status == EbikeRental.Domain.Enums.QualityCheckStatus.Failed)
                                    {
                                        <span class="inline-flex items-center rounded-full bg-red-100 px-2.5 py-0.5 text-xs font-medium text-red-800">Failed</span>
                                    }
                                    else if (qc.Status == EbikeRental.Domain.Enums.QualityCheckStatus.Conditional)
                                    {
                                        <span class="inline-flex items-center rounded-full bg-yellow-100 px-2.5 py-0.5 text-xs font-medium text-yellow-800">Conditional</span>
                                    }
                                    else if (qc.Status == EbikeRental.Domain.Enums.QualityCheckStatus.InProgress)
                                    {
                                        <span class="inline-flex items-center rounded-full bg-indigo-100 px-2.5 py-0.5 text-xs font-medium text-indigo-800">In Progress</span>
                                    }
                                    else
                                    {
                                        <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-800">Pending</span>
                                    }
                                </td>

                                <td class="px-4 py-3">
                                    <div class="space-y-1">
                                        @if (!string.IsNullOrEmpty(qc.GoodsReceiptNumber))
                                        {
                                            <div class="text-xs text-gray-600">GR: @qc.GoodsReceiptNumber</div>
                                        }
                                        @if (!string.IsNullOrEmpty(qc.ProductionOrderNumber))
                                        {
                                            <div class="text-xs text-gray-600">PO: @qc.ProductionOrderNumber</div>
                                        }
                                        @if (string.IsNullOrEmpty(qc.GoodsReceiptNumber) && string.IsNullOrEmpty(qc.ProductionOrderNumber))
                                        {
                                            <div class="text-gray-400">-</div>
                                        }
                                    </div>
                                </td>

                                <td class="px-4 py-3">
                                    <div class="flex justify-end gap-2">
                                        <a asp-page="./Info" asp-route-id="@qc.Id" class="inline-flex items-center justify-center rounded-lg border border-blue-200 bg-white px-3 py-2 text-sm text-blue-700 hover:bg-blue-50" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>

                                        @if (qc.Status == EbikeRental.Domain.Enums.QualityCheckStatus.Pending)
                                        {
                                            <form method="post" asp-page-handler="Delete" asp-route-id="@qc.Id" class="inline">
                                                <button type="submit" class="inline-flex items-center justify-center rounded-lg border border-red-200 bg-white px-3 py-2 text-sm text-red-700 hover:bg-red-50" onclick="return confirm('Are you sure?')" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="px-4 py-10 text-center text-sm text-gray-500">No quality checks found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
